{
  "name": "isomorphic-schema",
  "version": "2.0.0-beta.1",
  "description": "Isomorphic Typescript form validation library. Supports nested forms, rules for skipping validation of fields and multi-field validation. Has i18n support.",
  "author": {
    "name": "Sebastian Ware",
    "email": "sebastian@urbantalk.se",
    "url": "https://github.com/jhsware"
  },
  "license": "MIT",
  "homepage": "https://github.com/jhsware/isomorphic-schema",
  "bugs": {
    "url": "https://github.com/jhsware/isomorphic-schema/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jhsware/isomorphic-schema.git"
  },
  "source": "src/index.ts",
  "main": "dist/index.js",
  "browser": "dist/index.cjs.js",
  "module": "dist/index.module.js",
  "types": "dist/types.d.ts",
  "sideEffects": false,
  "browserslist": "> 0.5%, not dead",
  "dependencies": {
    "@swc/helpers": "^0.4.14",
    "component-registry": "^3.0.0-beta.2",
    "date-fns": "^1.29.0",
    "striptags": "^3.1.1"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.8.1",
    "@parcel/transformer-typescript-types": "^2.8.1",
    "@types/node": "^18.11.9",
    "jest-environment-jsdom": "^29.1.2",
    "parcel": "^2.8.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "build": "npm run build:clean && NODE_ENV=production parcel build",
    "test": "NODE_ENV=production npm run build && NODE_ENV=test jest",
    "test-debug": "NODE_ENV=test jest --inspect-brk --no-timeouts",
    "prepublishOnly": "npm run build",
    "preversion": "npm run test",
    "postversion": "git push && git push --tags",
    "build-dev": "rm -rf ./dist && NODE_ENV=development parcel build --no-optimize",
    "build:clean": "rm -rf dist/"
  }
}
